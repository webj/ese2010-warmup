package models;

import java.util.ArrayList;
import java.util.Date;
import java.util.List;

import javax.persistence.CascadeType;
import javax.persistence.Entity;
import javax.persistence.Lob;
import javax.persistence.ManyToOne;
import javax.persistence.OneToMany;

import play.db.jpa.Model;

@Entity
public class Answer extends Model {

	public User author;
	public Date timestamp;

	@Lob
	public String content;

	@ManyToOne
	public Question question;

	@OneToMany(mappedBy = "text", cascade = CascadeType.REMOVE)
	List<Vote> votes;

	public Answer(Question question, User author, String content) {
		this.question = question;
		this.author = author;
		this.content = content;
		this.timestamp = new Date();
		this.votes = new ArrayList<Vote>();
	}

	/**
	 * public Answer addVote(User author, String result) { Vote vote = new
	 * Vote(this, author, result).save(); votes.add(vote); this.save(); return
	 * this; }
	 **/
}
